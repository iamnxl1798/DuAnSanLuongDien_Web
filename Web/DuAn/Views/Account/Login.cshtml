    <script>
        function hideError() {
            document.getElementById("errorLogin").innerText = "";
        }
        var showModalLoading = function () {
            $('#modalLoader_Login').modal('show');
        }
        var hideModalLoading = function () {
            $('#modalLoader_Login').modal("hide");
        }
        function CheckLogin() {
            showModalLoading();
            var username = document.getElementById("username").value;
            var password = document.getElementById("password").value;
            $.ajax({
                type: "POST",
                dataType: 'json',
                data: {
                    username: username,
                    password: password
                },
                url: '@Url.Action("CheckLogin", "Account")',
                success: function (response) {
                    if (response == "Success") {
                        window.location.href = "@Url.Action("Index", "Home")";
                    } else if (response == "Fail") {
                        document.getElementById("errorLogin").innerText = "Username or password is wrong !!!"
                    } else {
                        alert(response);
                    }
                    hideModalLoading();
                },
                error: function (response) {
                    alert(response);
                    hideModalLoading();
                }
            });
        }
    </script>
