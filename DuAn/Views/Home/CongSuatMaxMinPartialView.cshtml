<div class="modal-dialog modal-dialog-centered modal-xl col-12" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Công suất MAX - MIN</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i aria-hidden="true" class="ki ki-close"></i>
            </button>
        </div>
        <div class="modal-body">
            <form class="m-form m-form--fit row" style="justify-content:center">
                <div class="form-group m-form__group col-3">
                    <label>
                        Điểm đo
                    </label>
                    <select class="form-control m-select2 ml-2" id="select_diemdo">
                        <option value="-1">Tất cả</option>
                        @foreach (var item in ViewBag.listDiemDo)
                        {
                            <option value="@item.ID">@item.TenDiemDo</option>
                        }
                    </select>
                </div>
                <div class="form-group m-form__group col-5 row">
                    <label class="col-form-label">
                        Thời gian
                    </label>
                    <div class="ml-2 datepicker date input-group p-0 shadow-sm">
                        <input type="text" placeholder="Thời gian hiệu lực" onchange="" class="form-control" value="@{DateTime.Now.AddDays(-1).ToString("dd/mm/yyyy")}" id="thoiGianHieuLuc" readonly>
                        <div class="input-group-append"><span class="input-group-text"><i class="fa fa-calendar"></i></span></div>
                    </div>
                </div>
                <div class="col-2 order-2 order-xl-1 m--align-right" style="bottom:15%;">
                    <a href="javascript:;" class="btn btn-primary" id="btn-search">
                        <span>
                            <i class="fa fa-search"></i>
                            <span>
                                Tìm kiếm
                            </span>
                        </span>
                    </a>
                </div>
            </form>

        </div>

        <div id="data"> </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>

<script>
    jQuery(document).ready(function () {
        $('.datepicker').datepicker({
            clearBtn: true,
            format: "dd/mm/yyyy"
        });
        $('.m-select2').select2();
        $('#btn-search').on('click', function () {
            $.ajax({
                url: '/Home/CongSuatMaxMinDatatable',
                type: 'POST',
                data: {
                    idDiemDo: $('#select_diemdo').val(),
                    date: $('#thoiGianHieuLuc').val()
                },
                success: function (data) {
                    $('#data').html(data);
                },
                error: function (xhr, ajaxOptions, thrownError) {

                }
            })
        })
    })

</script>