@model List<DuAn.Models.CustomModel.TongSanLuongTheoThoiGian>
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Sản lượng chi tiết năm @Model[0].date.Year</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i aria-hidden="true" class="ki ki-close"></i>
            </button>
        </div>
        <div class="modal-body">
            @foreach (var item in Model)
            {
                <div class="mb-3">
                    <!--begin::Content-->
                    <div class="d-flex align-items-center flex-grow-1">
                        <!--begin::Section-->
                        <div class="d-flex flex-wrap align-items-center justify-content-between w-100">
                            <!--begin::Info-->
                            <div class="d-flex flex-column align-items-cente py-2">
                                <!--begin::Title-->
                                <span class="text-dark-75 font-weight-bold text-hover-primary font-size-lg mb-1">@item.date.ToString("MM/yyyy")</span>
                                <!--end::Title-->
                            </div>
                            <!--end::Info-->
                            <!--begin::Label-->
                            <span class="label label-lg label-light-primary label-inline font-weight-bold py-4">@item.numberFormatValue MWh</span>
                            <!--end::Label-->
                        </div>
                        <!--end::Section-->
                    </div>
                    <!--end::Content-->
                </div>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        </div>
    </div>
</div>
